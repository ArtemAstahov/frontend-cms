<div class="w-grid">
    <h3>Все страницы</h3>
    <table class="table table-bordered table-striped table-hover">
        <thead>
            <tr>
                <th>ID</th>
                <th>Название</th>
                <th>Каталог</th>
                <th>Автор</th>
                <th>Дата создания</th>
                <th width="70">Состояние</th>
                <th width="70">В корзину</th>
            </tr>
        </thead>
        <tbody class="list-items"></tbody>
    </table>

    {{{ notFound }}}

    <!--Сортировка-->
    <div class="row">
        <div class="span4">
            <div class="control-group">
                <label class="control-label" for="sortby">Сортировать по:</label>
                <div class="controls">
                    <select id="sortby" name="sortby" class="input-medium">
                        <option value="id">ID</option>
                        <option value="pagename">Названию</option>
                        <option value="author_id">Автору</option>
                        <option value="catalog_id">Каталогу</option>
                        <option value="date">Дате</option>
                    </select>
                </div>
            </div>
        </div>
        <div class="span4">
            <div class="control-group">
                <label class="control-label" for="limit">Выводить по:</label>
                <div class="controls">
                    <select id="limit" name="limit" class="input-medium">
                        <option>10</option>
                        <option>15</option>
                        <option>20</option>
                        <option>25</option>
                    </select>
                </div>
            </div>
        </div>
        <div class="span3 savepages">
            <input type="hidden" id="itemNameSearch" value="{{ itemNameSearch }}">
            <button class="btn btn-success" id="applySettings">Применить настройки</button>
        </div>
    </div>

    <!--Пагинация-->
    <div class="row">
        <div class="span12">
            <div class="pagination">
                <ul>
                    {{#pagination countItems}}{{/pagination}}
                </ul>
            </div>
        </div>
    </div>
</div>