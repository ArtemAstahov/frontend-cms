<div class="w-editpage">

    <div class="wraptooltip">
        <div class="alert alert-success tooltips">
            <button class="close" data-dismiss="alert">×</button>
            <span class="center">Готово!</span>
        </div>
        <div class="alert alert-danger tooltips">
            <button class="close" data-dismiss="alert">×</button>
            <span class="center error-body"></span>
        </div>
    </div>

    <h3 class="center">Изменить страницу</h3>
    <form id="editpage">
        <div class="row">
            <div class="span6">
                <div class="control-group">
                    <label class="control-label" for="pagename">Заголовок страницы</label>
                    <div class="controls">
                        <input data-bind="value: pageName, valueUpdate: 'afterkeydown'"
                               type="text" id="pagename" name="pagename" class="input-xlarge required" value="{{ item.page.pagename }}">
                        <label class="fail failpagename"></label>
                    </div>
                </div>
            </div>
            <div class="span5 aliasright">
                <div class="control-group">
                    <label class="control-label" for="alias">Алиас страницы</label>
                    <div class="controls">
                        <input data-bind="value: pageAlias, valueUpdate: 'afterkeydown'"
                               type="text" id="alias" name="alias" class="input-xlarge required alphanumeric" value="{{ item.page.alias }}">
                        <label class="fail failalias"></label>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="span11 htmlcode">
                <h3 class="htmlcodelabel">HTML-код:
                    <label class="editorfail label label-important" for="editor">Пожалуйста введите html-код</label>
                </h3>
                <textarea id="editor" class="auto">{{ item.page.content }}</textarea>
            </div>
        </div>
        <div class="row">
            <div class="span6">
                <div class="control-group">
                    <label class="control-label" for="mp3-link">Ссылка на mp3:</label>
                    <div class="controls">
                        <input data-bind="value: pageMp3, valueUpdate: 'afterkeydown'" type="text" id="mp3-link" name="link"
                               class="input-xlarge" value="{{ item.page.link }}">
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" for="metadesc">Meta-описание</label>
                    <div class="controls">
                        <textarea data-bind="value: pageDesc, valueUpdate: 'afterkeydown'"
                                  id="metadesc" name="metadesc" class="input-xlarge">{{ item.page.metadesc }}</textarea>
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" for="keywords">Ключевые слова:</label>
                    <div class="controls">
                        <textarea data-bind="value: pageKeywords, valueUpdate: 'afterkeydown'"
                                  id="keywords" name="metakeywords" class="input-xlarge">{{ item.page.metakeywords }}</textarea>
                    </div>
                </div>
            </div>
            <div class="span5">
                <div class="control-group">
                    <label class="control-label" for="datepicker">Дата создания:</label>
                    <div class="controls">
                        <input data-bind="value: pageDate"
                               id="datepicker" type="text" name="date" class="input-large required" value="{{ item.page.date }}">
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" for="pagecatalog">Каталог страницы:</label>
                    <div class="controls">
                        <select data-bind="value: pageCat" id="pagecatalog" name="catalog_id" class="input-large">
                            <option value="0">Нету</option>
                            {{#each item.catalogs}}
                                <option value="{{ id }}" {{selectPageCatalog id ../item.page}}>
                                    {{ catname }}
                                </option>
                            {{/each}}
                        </select>
                        <input type="hidden" id="author_id" value="{{ item.userId }}">
                        <input type="hidden" id="pageId" value="{{ item.page.id }}">
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label control-label-image" for="upload_button">Изображение:</label>
                    <div class="controls">
                        <span class="imageName">
                            <img src="{{ siteURL }}/frontend/img/site/small/{{ item.page.image }}">
                        </span>
                        <div id="upload_button" class="btn btn-primary btn-mini">Загрузить</div>
                    </div>
                </div>
                <div class="control-group">
                    <div class="controls">
                        <button id="savePage" data-bind="enable: isValid" class="btn btn-success btn-large">Сохранить</button>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>